public class Main {
  public static void main(String[] args) {

    int number = 25;
    String size;

    // statement to check size
    switch (number) {
    
      case 25:
        size = "Extra Small";
        break;

      case 29:
        size = "Small";
        break;

      case 41:
        size = "Medium";
        break;

      case 45:
        size = "Large";
        break;

      case 48:
        size = "Extra Large";
        break;
      
      default:
        size = "Unknown";
        break;

    }
    System.out.println("Size: " + size);
  }
}
